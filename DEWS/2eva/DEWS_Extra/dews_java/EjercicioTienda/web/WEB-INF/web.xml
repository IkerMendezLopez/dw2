<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Número máximo de clientes permitidos</description>
        <param-name>maxCli</param-name>
        <param-value>10</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegistro</servlet-name>
        <servlet-class>servlets.ServletRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAgregarLineaPedido</servlet-name>
        <servlet-class>servlets.ServletAgregarLineaPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUpdateLineaPedido</servlet-name>
        <servlet-class>servlets.ServletUpdateLineaPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletVaciarCesta</servlet-name>
        <servlet-class>servlets.ServletVaciarCesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGrabarCompra</servlet-name>
        <servlet-class>servlets.ServletGrabarCompra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFin</servlet-name>
        <servlet-class>servlets.ServletFin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPedidosCliente</servlet-name>
        <servlet-class>servlets.ServletPedidosCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistro</servlet-name>
        <url-pattern>/ServletRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAgregarLineaPedido</servlet-name>
        <url-pattern>/ServletAgregarLineaPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUpdateLineaPedido</servlet-name>
        <url-pattern>/ServletUpdateLineaPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletVaciarCesta</servlet-name>
        <url-pattern>/ServletVaciarCesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGrabarCompra</servlet-name>
        <url-pattern>/ServletGrabarCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFin</servlet-name>
        <url-pattern>/ServletFin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPedidosCliente</servlet-name>
        <url-pattern>/ServletPedidosCliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

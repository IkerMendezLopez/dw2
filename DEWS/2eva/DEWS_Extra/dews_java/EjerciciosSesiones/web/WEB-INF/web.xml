<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>fichEquipos</param-name>
        <param-value>equipos.txt</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletJuego</servlet-name>
        <servlet-class>servlets.ServletJuego</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletComprobar</servlet-name>
        <servlet-class>servlets.ServletComprobar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesoPregunta</servlet-name>
        <servlet-class>servlets.ProcesoPregunta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Resultado</servlet-name>
        <servlet-class>servlets.Resultado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EscribeApuesta</servlet-name>
        <servlet-class>servlets.EscribeApuesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesaApuesta</servlet-name>
        <servlet-class>servlets.ProcesaApuesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ejercicio0</servlet-name>
        <servlet-class>servlets.Ejercicio0</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletJuego</servlet-name>
        <url-pattern>/ServletJuego</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletComprobar</servlet-name>
        <url-pattern>/ServletComprobar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesoPregunta</servlet-name>
        <url-pattern>/servlets/ProcesoPregunta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Resultado</servlet-name>
        <url-pattern>/servlets/Resultado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EscribeApuesta</servlet-name>
        <url-pattern>/EscribeApuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesaApuesta</servlet-name>
        <url-pattern>/ProcesaApuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ejercicio0</servlet-name>
        <url-pattern>/Ejercicio0</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
